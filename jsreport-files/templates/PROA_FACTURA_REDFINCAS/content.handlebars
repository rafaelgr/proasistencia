<meta charset="utf-8">
<!-- #CSS Links -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<!--
<link rel="stylesheet" href="http://localhost:9000/ficheros/css/bootstrap.min.css">
-->
<img src='{#image LogoRedFincas}' style="display:none;"/>
<style>
    .cuadro {
        border-radius: 10px 10px 10px 10px;
        -moz-border-radius: 10px 10px 10px 10px;
        -webkit-border-radius: 10px 10px 10px 10px;
        border: 1px solid #000000;
        padding: 10px;
    }
    .borderless td, .borderless th {
        border: none;
    }    
</style>
<div>
    <table class="table">
        <tr >
            <td width="50%">
                <div style="text-align:justify;">
                    <h4>FACTURA NÂº: {{cabecera.numFact}}</h4>
                    <div style="font-size:small;">FECHA: {{cabecera.fecha}}</div>
                    <div>NIF: {{cabecera.receptorNif}}</div>
                    <div style="font-size:small;">PERIODO FACTURADO: {{cabecera.periodo}} </div>
                </div>
            </td>
            <td width="50%">
                <div>
                    <h4>Nombre: {{cabecera.receptorNombre}}</h4>
                    <div>Direccion: {{cabecera.receptorDireccion}}</div>
                    <div>Poblacion: {{cabecera.receptorCodPostal}} {{cabecera.receptorPoblacion}}</div>
                    <div>Provincia: {{cabecera.receptorProvincia}}</div>
                </div>
            </td>
        </tr>
    </table>
    <div>
       REFERENCIA: {{cabecera.referencia}}
    </div>
    {{#each capitulos}}
    <h4>{{nombre}}</h4>
    <table class="table table-stripped table-forum">
        <thead class="txt-color-blue">
            <tr>
                <th>
                    <div>CONCEPTO</div>
                </th>
                <th style="text-align:right;" width='20%'>
                    <div>IMPORTE</div>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each lineas}}
            <tr>
                <td>{{descripcion}}</td>
                <td style="text-align:right;" width='20%'>{{totalLinea}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table> 
    {{/each}}
    
    <table class="table table-stripped table-forum">
        <tbody>
            <tr>
                <td style="text-align:right;">TOTAL :</td>
                <td style="text-align:right;">{{cabecera.total}}</td>
            </tr>          
        </tbody>
    </table>
 
    <table class="table table-stripped table-forum">
        <thead class="txt-color-blue">
            <tr>
                <th></th>
                <th style="text-align:right;">% IVA</th>
                <th style="text-align:right;">Base imponible</th>
                <th style="text-align:right;">TOTAL</th>
            </tr>
        </thead>
        <tbody>
            {{#each bases}}
            <tr>
                <td></td>
                <td style="text-align:right;">{{porcentaje}}</td>
                <td style="text-align:right;">{{base}}</td>
                <td style="text-align:right;">{{cuota}}</td>
            </tr>
            {{/each}}
            <tr>
                <td colspan="2">
                    <div style="font-size:small;">
                        FORMA DE PAGO: {{cabecera.formaPago}} / VENCIMIENTO: {{cabecera.vencimiento}} 
                    </div>                    
                </td>
                <td style="text-align:right;">IMPORTE TOTAL :</td>
                <td style="text-align:right;">{{cabecera.totalConIva}}</td>
            </tr>
        </tbody>
    </table> 
   <table class="table">
        <tr>
            <td>
                <p>Observaciones:</p>
                <p>{{cabecera.observaciones}}</p>
            </td>
        </tr>
   </table>             
</div>